<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <%-include ('../includes/head.ejs')%>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/stars-rate.css" />
    <link rel="stylesheet" href="/css/dashboard.css" />
  </head>
  <body>
    <%- include ('../includes/nav.ejs')%>
    <section class="DD_main_container">
      <!-- options part -->
      <%if(approved){%>
      <div class="DD_options_container">
        <div class="DD_menu_overlay"></div>
        <div class="DD_toggle_menu">
          <img src="/img/icon/setting.svg" alt="setting" />
        </div>
        <div class="DD_sticky">
          <div class="DD_options">
            <!-- profile card -->
            <a href="/designer/profile">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/profile.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4><%= sellerName %></h4>
                </div>
              </div>
            </a>
            <!-- add design card -->
            <a href="/designer/addDesign">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="img/icon/add-button.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>اضافة منتج</h4>
                </div>
              </div>
            </a>
            <!-- earnings card -->
            <a href="/system/admin/create">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/coin.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>اضافة مدير للنظام</h4>
                </div>
              </div>
            </a>
            <a href="/sellers/requests">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/coin.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>طلبات تسجيل البائعين / المسوقين</h4>
                </div>
              </div>
            </a>
            <!-- withdraw card -->
            <a href="/shipping/requests">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/atm.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>تقرير المبيعات/طلبات الشحن</h4>
                </div>
              </div>
            </a>
            <a href="/marketer/orders">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/atm.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>تقرير ارباح المسوقين</h4>
                </div>
              </div>
            </a>
            <a href="/products/categories">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/monitoring.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>اضافة / تعديل الفئات</h4>
                </div>
              </div>
            </a>
            <a href="/addModify/shippingFees">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/monitoring.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>اضافة / تعديل اسعار الشحن</h4>
                </div>
              </div>
            </a>
            <a href="/categories/monitor">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/monitoring.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>مراقبة الاصناف</h4>
                </div>
              </div>
            </a>
            <a href="/seller/remove">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/no-stopping.svg" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>ايقاف بائع</h4>
                </div>
              </div>
            </a>
            <!-- change password card -->
            <a href="/designer/changePass">
              <div class="DD_option_card">
                <div class="DD_option_card_img">
                  <img src="/img/icon/password.png" alt="userphoto" />
                </div>
                <div class="DD_option_card_text">
                  <h4>تغيير كلمة المرور</h4>
                </div>
              </div>
            </a>
          </div>
          <!-- end options part -->
        </div>
      </div>
      <%}else{%>
      <p>شكرا لتسجيلك معنا طلب تسجيلك فى انتظار موافقة مدير النظام</p>
      <%}%>
      <!-- designs part -->
      <% if (products.length > 0) { %>
      <div class="DD_designs_part">
        <% for (let product of products) { %>
        <article class="DD_father_of_design">
          <!-- start design card -->
          <div class="DD_design">
            <!-- top part of design -->
            <div class="DD_design_img">
              <img
                src="/<%= product.imagePath[0] %>"
                alt="<%= product.title %>"
              />
              <div class="DD_design_img_overlay">
                <h2 class="DD_design_name"><%= product.title %></h2>
                <div class="DD_design_status">
                  <span
                    class="
                      DD_status_color
                      <%=
                      product.published
                      ===
                      true?
                      'DD_design_active'
                      :
                      'DD_design_not_active'
                      %>
                    "
                  ></span>
                  <span class="DD_status_text"
                    ><%= product.published === true? "Published":"Not Published"
                    %></span
                  >
                </div>
              </div>
            </div>
            <!-- bottom part of design -->
            <div class="DD_design_bottom_part">
              <p class="DD_design_description"><%= product.description %></p>
              <div class="card__price-container">
                <div class="DD_design_price"><%= product.price %>LE</div>
                <h3 class="shipment__price">
                  + <%= product.shippingFees > 0? product.shippingFees :
                  'مجانى'%>
                </h3>
              </div>
              <%if (product.stock > 0) { %>
              <div class="avilable__container">
                <div class="avilable--right">
                  <span class="avilale__products"> متوفر </span>:
                  <span class="avilale__number"><%= product.stock %></span>
                </div>
                <div class="avilable--left">
                  <div class="star">
                    <input type="radio" value="5" name="star" id="star5" />
                    <label for="star5" class="full"></label>
                    <input type="radio" value="4.5" name="star" id="star4.5" />
                    <label for="star4.5" class="half"></label>
                    <input type="radio" value="4" name="star" id="star4" />
                    <label for="star4" class="full"></label>
                    <input type="radio" value="3.5" name="star" id="star3.5" />
                    <label for="star3.5" class="half"></label>
                    <input type="radio" value="3" name="star" id="star3" />
                    <label for="star3" class="full"></label>
                    <input type="radio" value="2.5" name="star" id="star2.5" />
                    <label for="star2.5" class="half"></label>
                    <input type="radio" value="2" name="star" id="star2" />
                    <label for="star2" class="full"></label>
                    <input type="radio" value="1.5" name="star" id="star1.5" />
                    <label for="star1.5" class="half"></label>
                    <input type="radio" value="1" name="star" id="star1" />
                    <label for="star1" class="full"></label>
                    <input type="radio" value="0.5" name="star" id="star.5" />
                    <label for="star.5" class="half"></label>
                  </div>
                </div>
              </div>
              <%} else {%>
              <div class="noproducts">غير متوفر</div>
              <%}%>
              <div class="DD_design_bottom_btn">
                <a
                  href="/designer/editDesign/<%= product._id %>"
                  class="DD_design_edit"
                >
                  <img
                    src="/img/icon/edit.svg"
                    alt="Edite icon"
                    style="width: 35px"
                  />
                </a>
                <input
                  type="hidden"
                  value="<%= product._id %>"
                  name="productId"
                />
                <div class="avilable--bottom">
                  <span class="avilale__products"><%=product.sellerName%></span>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button class="DD_design_remove dltDsin" type="button">
                  <img
                    src="/img/icon/garbage.svg"
                    alt="remove icon"
                    style="width: 35px"
                  />
                </button>
              </div>
            </div>
          </div>
        </article>
        <% } %>
        <!-- end of design card -->
      </div>
      <!-- end designs part -->
      <% } else { %>
      <div class="DD_no_work">
        <h1>لا يوجد منتجات خاصه بك</h1>
      </div>
      <% } %>
    </section>
    <script src="/js/dashboard.js"></script>
    <script src="/js/designActions.js"></script>
    <%-include ('../includes/end.ejs')%>
  </body>
</html>
